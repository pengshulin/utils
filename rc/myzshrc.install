#!/usr/bin/env bash
# Peng Shulin <trees_peng@163.com>

if ! [ -f myzshrc ]; then
    echo 'no myzshrc found in current directory'
    exit 1
fi

test -e ~/.myzshrc  &&  rm ~/.myzshrc
ln -s `pwd`/myzshrc ~/.myzshrc

if [ -f ~/.zshrc ]; then
    if ! grep "source ~/.myzshrc" ~/.zshrc >/dev/null ; then
        echo "source ~/.myzshrc" >> ~/.zshrc
    fi
fi

