#!/usr/bin/env bash
# Peng Shulin <trees_peng@163.com>

if ! [ -f myvimrc ]; then
    echo 'no myvimrc found in current directory'
    exit 1
fi

rm ~/.myvimrc
ln -s `pwd`/myvimrc ~/.myvimrc
    
if [ -f ~/.vimrc ]; then
    if ! grep "source ~/.myvimrc" ~/.vimrc >/dev/null ; then
        echo "source ~/.myvimrc" >> ~/.vimrc
    fi
fi
