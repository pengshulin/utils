# List of modifier:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).

#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

"xbindkeys_show" 
  control + shift + q

# applications
"firefox"
  control + alt + f
"mousepad"
  control + alt + n
"thunar"
  control + alt + e 
"midori"
  control + alt + m
"synaptic-pkexec"
  control + alt + s
"xfce4-terminal"
  control + alt + t 
"xfce4-terminal -x htop"
  control + alt + h 
"xfce4-terminal -x ipython"
  control + alt + p

# serial port debug
"xfce4-terminal -x miniterm.py /dev/ttyUSB0"
  control + alt + KP_0



# print screen
"xfce4-screenshooter -f"
  Print
"xfce4-screenshooter -r"
  control + Print
"xfce4-screenshooter -w"
  alt + Print


# sound
#"amixer -c 1 set Headphone toggle"
"volume.sh toggle"
  alt + slash
#"amixer -c 1 set Headphone 5%- unmute"
"volume.sh down"
  alt + comma
#"amixer -c 1 set Headphone 5%+ unmute"
"volume.sh up"
  alt + period
"gmusicbrowser -cmd PlayPause"
  alt + shift + slash
"gmusicbrowser -cmd PrevSong"
  alt + shift + comma
"gmusicbrowser -cmd NextSong"
  alt + shift + period


