# List of modifier:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).

#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

"xbindkeys_show" 
  control + shift + q

# applications
"firefox"
  control + alt + f
"mousepad"
  control + alt + n
"thunar"
  control + alt + e 
"mypaint"
  control + alt + m
"xfce4-terminal"
  control + alt + t 
"xfce4-terminal -x htop"
  control + alt + h 
"xfce4-terminal -x ipython"
  control + alt + p
"zim"
  control + alt + z


# display setting
"xfce4-display-settings --minimal"
  control + alt + grave


# backlight control
"xbacklight -dec 10"
  control + alt + bracketleft
"xbacklight -inc 10"
  control + alt + bracketright
"xbacklight -set 0"
  control + alt + shift + bracketleft
"xbacklight -set 100"
  control + alt + shift + bracketright

# print screen
"xfce4-screenshooter -f"
  Print
"xfce4-screenshooter -r"
  control + Print
"xfce4-screenshooter -w"
  alt + Print


# sound
#"amixer -c 1 set Headphone toggle"
"volume.sh toggle"
  control + alt + slash
#"amixer -c 1 set Headphone 5%- unmute"
"volume.sh down"
  control + alt + comma
#"amixer -c 1 set Headphone 5%+ unmute"
"volume.sh up"
  control + alt + period
"gmusicbrowser -cmd PlayPause"
  control + alt + shift + slash
"gmusicbrowser -cmd PrevSong"
  control + alt + shift + comma
"gmusicbrowser -cmd NextSong"
  control + alt + shift + period


